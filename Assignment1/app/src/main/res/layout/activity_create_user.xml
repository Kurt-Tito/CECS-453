<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bluegradient"
    tools:context=".CreateUserActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textViewCreateUsername"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:text="@string/text_username" />

        <EditText
            android:id="@+id/editTextCreateUsername"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textViewCreatePassword"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:text="@string/text_password" />

        <EditText
            android:id="@+id/editTextCreatePassword"
            android:inputType="textPassword"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textViewConfirmCreatePassword"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:text="@string/text_confirmPassword" />

        <EditText
            android:id="@+id/editTextConfirmCreatePassword"
            android:inputType="textPassword"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textViewCreateFirstName"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:text="@string/text_firstName" />

        <EditText
            android:id="@+id/editTextCreateFirstName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textViewCreateLastName"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:text="@string/text_lastName" />

        <EditText
            android:id="@+id/editTextCreateLastName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textViewCreateEmail"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:text="@string/text_email" />

        <EditText
            android:id="@+id/editTextCreateEmail"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textViewCreateAge"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:text="@string/text_age" />

        <EditText
            android:id="@+id/editTextCreateAge"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:gravity="center">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/button_cancel"
            android:layout_marginLeft="25dp"/>
        
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/button_save"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>

</LinearLayout>